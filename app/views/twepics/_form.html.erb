<%= form_with(model: @twepic, local: true, url: choose_new_or_edit ) do |form| %>
<% if @twepic.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twepic.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @twepic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>
  <div class="twepic_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="twepic_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :image, id: :feed_image %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to '一覧画面にもどる', twepics_path %>
